<section>
    <div class="container">
        <div> 
            <a class="btn btn-success" style="margin-left:88%;" href="/admin/add-product" role="button">Add Products</a>

        </div>
        

        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">category</th>
                    <th scope="col">description</th>
                    <th scope="col">image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}

                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td><img style="width:50px; height:50px;"  src="/product-images/{{this._id}}.jpg"</td>
                </tr>
                {{/each}}
                
            </tbody>
        </table>
    </div>
</section>